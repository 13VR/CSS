

    
    <header class='header '>
        <div class="">
            {{> logo}}
        </div>

        <nav class='header_nav  '>
            <div class="header_nav_right">
                {{> nav list=header}}
            </div>
        </nav>
    </header>    
    
    {{#with main}}
    <main class="main">
        <img src="{{image}}" alt="Hero image" class="main_image">   
        <div class="main_content">
            <h1 class="main_title">{{heading}}</h1>
            <p class="main_text">{{description}}</p>
            <a href="{{href}}" class="main_button">{{button}}</a>
        </div> 
    </main>
    {{/with}}

    <div class="featured">
        {{#each featured}}
            <div class="featured_content">
                <img src="{{photo}}" class="featured_image">
                <div class="featured_title">{{heading}}</div>
                <p class="featured_info">{{info}}</p>
                <a href="{{linkUrl}}" class="featured_button">{{linkText}}</a>
            </div>            
        {{/each}}
    </div>
    
    

    <div class="actions">
    {{#each actions}}
        <div class="action_content">
            <div class="action_text">{{heading}}</div>
            <a href="{{url}}" class="action_button">{{text}}</a>        
        </div>
    {{/each}}
    </div>
   
    <footer class=" footer">
        <div >
            {{> logo}}
            <span class="footer_copyright">Copyright 2023-2024</span>
        </div>

        {{#each footer}}
            <div >
                <span class="footer_title">{{title}}</span>
                {{> nav list=links isVertical=true}}
            </div>
        {{/each}}
    </footer>
    
